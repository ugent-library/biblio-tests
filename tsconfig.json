{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["cypress", "node"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": ["**/*.ts", "cypress.config.js"]
}
